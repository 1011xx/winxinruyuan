.main-container {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
}
.head {
	width: 90%;
	padding: 8px 5px;
	height: 30px;
	overflow: hide;
}

.head .headbox {
	width: 100%;
	height: 100%;
	border-radius: 8px;
	background-color: #f2f2f2;
}

.head icon {
	width: 10%;
	height: 50%;
	padding: 2% 0 5% 5%;
	float: left;
}

.head input {
	float: left;
	width: 80%;
	height: 100%;
}
.scrolly{
	height: 100%;	
}
.body{
 display: flex;
  flex-direction: column;
}
.bodysw{
	flex: 1;
	display: flex;
   flex-direction: column;
}
.swh{
	height: 600px;
}
.main-list {
	height: 100%;
}
.scrolly2{
	height: 600px;
}
.d1{
	box-sizing: border-box;
	width: 100%;
	padding: 3%;
}
.d1 .d2{
	width: 100%;
	margin-bottom: 10px;
}


.headnav {
	width: 100%;
	height: 42px;
	border: 1px solid #ccc;
	line-height: 42px;
	padding: 0 5% 0 5%;
	box-sizing: border-box;
	margin-bottom: 2px;
		border-left: 0;
	border-right: 0;
}
.headnav b{
	width: 30%;
	height:38px;
	text-align: center;
}
.b1 {
	float: left;
}

.active {
	color: #6cc1c7;
	border-bottom: 2px solid #6cc1c7;
}

.b2 {
	float: right;
}

.bannernav {
	width: 100%;
	height: 120px;
	padding: 10px 0;
}

.hxnav {
	height: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	align-items: center;
	justify-content: center;
}

.hxnav li {
	flex: 1;
	box-sizing: border-box;
	width: 150px;
	height: 100%;
	margin-left: 20px;
	border-radius: 5px;
}

.hxnav li image {
	width: 150px;
	height: 80px;
	border-radius: 10px;
}
.hxnav li b{
	font-size: 12px;
	text-align: center;
}
.bodynav{
	width: 100%;
	height: 40px;
	border: 1px solid #ccc;
	border-left: 0;
	border-right: 0;
}
.bodynav ul{
	display: flex;
	flex-direction: row;
}
.bodynav ul li{
	line-height: 37px;
	padding: 0 10px;
	text-align: center;
	flex: 1;
	margin: 0 5%;
}

.d2 .userinfo-avatar{
	width: 80px;
	height: 80px;
	border-radius: 50%;
	float: left;
}
.d2 .p1{
	width: 100%;
	height: 80px;
}
.d2 .name{
	float: left;
	padding: 0 5px;
	height: 80px;
	line-height: 60px;
	font-size: bold;	
}
.d2 .p{
	width: 100%;
	padding: 10px 0;
}
.d2 .p .bl1{
	color: #92d7c8;
	font-weight: bold;
	font-size: 20px;
}
.d2 #d2img{
	width: 100%;
}
.hide{
	display: none;
}
.show{
	display: block;
}
.tb{
	width: 100%;
	height: 20px;
	margin-top: 10px;
}
.tb image,.tb b{
	float: right;
	width: 15px;
	height: 15px;
	margin-right: 10px;
}
