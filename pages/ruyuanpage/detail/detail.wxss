
.containerb{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
}
.d1{
	flex: 1;	
}
.d2{
	width: 100%;
	box-sizing: border-box;
	padding: 10px 20px;
	margin-bottom: 10px;
	border-top: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
}
.d2 .p{
	width: 100%;
	padding: 5px 0;
}
.d2 .p1{
	width: 100%;
	height: 80px;
}
.d2 .userinfo-avatar{
	width: 80px;
	height: 80px;
	border-radius: 50%;
	float: left;
}
.d2 .p1 b{
	float: left;
	width: 60%;
}
.d2 .p1 .name{
	padding: 20px 0 0 10px;
}
.d2 .p .bl1{
	color: #92d7c8;
	font-weight: bold;
	font-size: 20px;
}
.d2 #d2img{
	width: 100%;
}
.hide{
	display: none;
}
.show{
	display: block;
}
.tb{
	width: 100%;
	height: 20px;
	margin-top: 10px;
}
.tb b{
	float: left;
	width: 60px;
	height: 15px;
	margin-right: 10px;
	text-align: center;
}