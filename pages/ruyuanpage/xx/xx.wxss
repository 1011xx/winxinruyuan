.main-container {
	height: 100%;
	width: 100%;
	overflow-x: hidden;
	display: flex;
	flex-direction: column;
}
.body{
	flex: 1;
	width: 100%;
}
.body ul{
	width: 100%;
}
.body ul li{
	display: block;
	width: 100%;
	height: 90px;
	border-bottom: 1px solid #ccc;
	box-sizing: border-box;
	padding: 5px 10px;
}
.body ul li span{
	display: block;
}
.body ul li .sp2{
	color: grey;
	font-size: 12px;
}
.body ul .li1{
	border-top: 1px solid #ccc;
}
.body ul .xxleft{
	width: 20%;
	height: 100%;
	float: left;
}
.body ul .xxcenter{
	box-sizing: border-box;
	width: 60%;
	height: 100%;
	float: left;
	padding: 5px 0 5px 0;
}
.body ul .xxright{
	font-size: 14px;
	width: 20%;
	height: 100%;
	float: left;
	box-sizing: border-box;
	padding-top: 60px;
}
.body .userinfo-avatar{
	width: 90%;
	height: 70px;
	border-radius: 50%;
	background-color: blue;
}